<div class="container header">
  <div class="title">
    <h1>Edit your list ðŸš€</h1>
  </div>
  <div class="list-nav">
    <p> <%= link_to 'Back to list', get_dones_path(@list) %> </p>
  </div>
</div>

<div class="items-card col-8">
  <%= simple_form_for(@list, html: { multipart: true }) do |f| %>
    <div class="edit-card">
      <%= f.input :title, placeholder: @list.title %>
    </div>
    <div class="edit-card">
      <%= f.simple_fields_for :items do |items_form| %>
        <%= items_form.input :name %>
      <% end %>
    </div>
    <div class="edit-card">
      <%= f.submit %>
    </div>

  <% end %>
</div>
